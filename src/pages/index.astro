    </div>
  </main>

  <RPGCat client:load />
</Layout>

<style>
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 18px;
  }

  @media (max-width: 768px) {
    .bento-grid {
      grid-template-columns: 1fr;
    }
    .bento-grid > * {
      grid-column: span 1 !important;
      grid-row: span 1 !important;
    }
  }

  .card {
    background: #fefcf8;
    border-radius: 14px;
    box-shadow: 0 1px 3px rgba(61, 44, 30, 0.06), 0 4px 16px rgba(61, 44, 30, 0.04);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    overflow: hidden;
  }

  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 2px 6px rgba(61, 44, 30, 0.08), 0 8px 24px rgba(61, 44, 30, 0.06);
  }

  .hero-card {
    background: linear-gradient(135deg, #fefcf8 0%, #f5ece0 100%);
    border: 1px solid rgba(139, 111, 71, 0.08);
  }

  .card-title {
    font-size: 1.1rem;
    font-weight: 500;
    color: #3d2c1e;
    margin: 0 0 16px 0;
    letter-spacing: 0.02em;
  }

  .jewelry-item {
    cursor: pointer;
    transition: transform 0.15s ease;
  }

  .jewelry-item:hover {
    transform: scale(1.04);
  }

  .blog-item {
    cursor: pointer;
    transition: transform 0.15s ease;
  }

  .blog-item:hover {
    transform: translateY(-2px);
  }

  .insta-link {
    display: block;
    padding: 12px 16px;
    background: #faf3e8;
    border-radius: 10px;
    color: #3d2c1e;
    text-decoration: none;
    font-size: 0.95rem;
    transition: background 0.15s ease;
  }

  .insta-link:hover {
    background: #f0e6d6;
  }

  /* Scrollbar styling for anime list */
  .card ::-webkit-scrollbar {
    width: 4px;
  }
  .card ::-webkit-scrollbar-track {
    background: transparent;
  }
  .card ::-webkit-scrollbar-thumb {
    background: rgba(139, 111, 71, 0.2);
    border-radius: 2px;
  }
</style>
