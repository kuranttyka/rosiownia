---
import Layout from '../layouts/Layout.astro'
import RPGCat from '../components/RPGCat'
---

<Layout title="Rouzeris">
  <main style="max-width: 1200px; margin: 0 auto; padding: 32px 20px 40px;">
    
    <!-- Decorative scattered elements -->
    <div class="deco deco-star" style="top: 120px; left: 5%;"></div>
    <div class="deco deco-dot" style="top: 300px; right: 8%;"></div>
    <div class="deco deco-star" style="top: 550px; left: 3%;"></div>
    <div class="deco deco-dot" style="top: 780px; right: 4%;"></div>
    <div class="deco deco-sparkle" style="top: 200px; right: 15%;"></div>
    <div class="deco deco-sparkle" style="top: 650px; left: 10%;"></div>

    <div class="bento-grid">
      
      <!-- Hero ‚Äî wide -->
      <div class="card hero-card" style="grid-column: span 2; grid-row: span 1;">
        <div style="padding: 52px 44px;">
          <h1 class="hero-title">Rouzeris</h1>
          <p class="hero-subtitle">artist ¬∑ jewelry maker ¬∑ developer</p>
          <div class="hero-doodle">‚ú¶ ‚úß ‚ú¶</div>
        </div>
      </div>

      <!-- About Me ‚Äî tall, right side -->
      <div class="card about-card" style="grid-row: span 2;">
        <div style="padding: 28px;">
          <h2 class="card-title title-handwritten">About Me</h2>
          <div class="about-avatar">üå∏</div>
          <p class="about-text">
            Hi, I'm Rosia! I make jewelry from recycled silver, watch too much anime, and build things on the internet.
          </p>
          <p class="about-text" style="margin-top: 12px;">
            Based in Poland. Fueled by matcha and Studio Ghibli soundtracks. Currently learning wire wrapping and Rust.
          </p>
          <div class="about-tags">
            <span class="tag tag-rose">she/her</span>
            <span class="tag tag-lavender">INTJ</span>
            <span class="tag tag-sage">‚ôì</span>
          </div>
        </div>
      </div>

      <!-- Anime Library ‚Äî wide -->
      <div class="card anime-card" style="grid-column: span 2; overflow: hidden;">
        <div style="padding: 24px;">
          <h2 class="card-title title-playful">üì∫ Anime Library</h2>
          <div style="display: flex; gap: 14px; overflow-x: auto; padding-bottom: 8px; scroll-snap-type: x mandatory;">
            {[
              { title: 'Spy x Family', color: '#e8c4c4' },
              { title: 'Chainsaw Man', color: '#c4c4e8' },
              { title: 'Jujutsu Kaisen', color: '#c4dce8' },
              { title: 'My Dress-Up Darling', color: '#e8d4c4' },
              { title: 'Bocchi the Rock!', color: '#d4e8c4' },
              { title: 'Frieren', color: '#c4e8d8' },
              { title: 'Violet Evergarden', color: '#d8c4e8' },
              { title: 'Attack on Titan', color: '#e8c4c4' },
            ].map((anime) => (
              <div style="flex-shrink: 0; width: 120px; scroll-snap-align: start;">
                <div style={`width: 120px; height: 170px; border-radius: 8px; background: ${anime.color};`}></div>
                <span style="font-size: 0.85rem; color: #3d2c1e; display: block; margin-top: 6px; line-height: 1.2;">{anime.title}</span>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Yuma card ‚Äî small, cozy -->
      <div class="card yuma-card">
        <div style="padding: 24px; text-align: center;">
          <h2 class="card-title title-handwritten">Meet Yuma üê±</h2>
          <div class="yuma-photo">
            <span style="font-size: 3rem;">üêà‚Äç‚¨õ</span>
          </div>
          <p style="font-size: 0.9rem; color: #6b5a4e; line-height: 1.5; margin-top: 12px;">
            Chief nap officer. Professional keyboard-sitter. Will steal your chair the moment you stand up.
          </p>
          <p style="font-size: 0.8rem; color: #8B6F47; margin-top: 8px; font-style: italic;">
            follow her adventures ‚Üí <a href="https://instagram.com/jumabestia" target="_blank" rel="noopener" style="color: #b49cfc; text-decoration: underline;">@jumabestia</a>
          </p>
        </div>
      </div>

      <!-- Jewelry Gallery ‚Äî wide -->
      <div class="card jewelry-card" style="grid-column: span 2;">
        <div style="padding: 24px;">
          <h2 class="card-title title-elegant">‚ú® Jewelry</h2>
          <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 12px;">
            {[
              { name: 'silver ring', color: '#c8c0b8' },
              { name: 'pearl necklace', color: '#e8e0d4' },
              { name: 'amber earrings', color: '#d4a864' },
              { name: 'beaded bracelet', color: '#b8968c' },
              { name: 'wire pendant', color: '#a0a0a0' },
              { name: 'crystal brooch', color: '#c4d4e0' },
            ].map((item) => (
              <div class="jewelry-item">
                <div style={`aspect-ratio: 1; border-radius: 10px; background: ${item.color}; margin-bottom: 6px;`}></div>
                <span style="font-size: 0.82rem; color: #6b5a4e; text-align: center; display: block;">{item.name}</span>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Spotify ‚Äî single column -->
      <div class="card spotify-card" style="overflow: hidden;">
        <div style="padding: 24px;">
          <h2 class="card-title title-playful">üéµ Listening</h2>
          <div style="display: flex; flex-direction: column; gap: 10px;">
            {[
              { track: 'Stefania', artist: 'Kalush Orchestra', color: '#e8c4a4' },
              { track: '–©–µ–¥—Ä–∏–∫', artist: 'Pentatonix', color: '#a4c4e8' },
              { track: 'Glimpse of Us', artist: 'Joji', color: '#c4a4c8' },
              { track: "Cruel Angel's Thesis", artist: 'Yoko Takahashi', color: '#e8a4a4' },
              { track: 'Homura', artist: 'LiSA', color: '#a4e8c4' },
            ].map((song) => (
              <div class="song-row">
                <div style={`width: 36px; height: 36px; border-radius: 6px; background: ${song.color}; flex-shrink: 0;`}></div>
                <div>
                  <div style="font-size: 0.85rem; color: #3d2c1e; line-height: 1.2;">{song.track}</div>
                  <div style="font-size: 0.72rem; color: #8B6F47;">{song.artist}</div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Recently Played Games -->
      <div class="card games-card" style="grid-column: span 2;">
        <div style="padding: 24px;">
          <h2 class="card-title title-playful">üéÆ Recently Played</h2>
          <div style="display: flex; gap: 16px;">
            {[
              { title: 'Stardew Valley', color: '#7ec850' },
              { title: 'Hollow Knight', color: '#3a3a5c' },
              { title: 'Animal Crossing', color: '#7ecfc0' },
            ].map((game) => (
              <div style="flex: 1;">
                <div style={`aspect-ratio: 1; border-radius: 10px; background: ${game.color}; margin-bottom: 10px;`}></div>
                <div style="font-size: 0.88rem; color: #3d2c1e; font-weight: 500; text-align: center;">{game.title}</div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Instagram ‚Äî small -->
      <div class="card insta-card">
        <div style="padding: 24px;">
          <h2 class="card-title title-playful">üì∏ Instagram</h2>
          <div style="display: flex; flex-direction: column; gap: 12px; margin-top: 8px;">
            <a href="https://instagram.com/roksolanas_7" target="_blank" rel="noopener" class="insta-link">
              üì∑ @roksolanas_7
              <span style="font-size: 0.8rem; color: #8B6F47; display: block; margin-top: 2px;">personal</span>
            </a>
            <a href="https://instagram.com/jumabestia" target="_blank" rel="noopener" class="insta-link">
              üê± @jumabestia
              <span style="font-size: 0.8rem; color: #8B6F47; display: block; margin-top: 2px;">Yuma the cat</span>
            </a>
          </div>
        </div>
      </div>

      <!-- Blog ‚Äî wide -->
      <div class="card blog-card" style="grid-column: span 2;">
        <div style="padding: 24px;">
          <h2 class="card-title title-elegant">üìù Blog</h2>
          <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 16px;">
            {[
              { title: 'Making jewelry with recycled silver', color: '#c8c0b8' },
              { title: 'My top 10 anime of 2025', color: '#c4c4e8' },
              { title: 'Building apps with AI', color: '#c4dce8' },
            ].map((post) => (
              <div class="blog-item">
                <div style={`height: 80px; border-radius: 8px; background: ${post.color}; margin-bottom: 10px;`}></div>
                <h3 style="font-size: 0.95rem; color: #3d2c1e; margin: 0; font-weight: 500; line-height: 1.3;">{post.title}</h3>
                <p style="font-size: 0.8rem; color: #8B6F47; margin-top: 4px;">Read more ‚Üí</p>
              </div>
            ))}
          </div>
        </div>
      </div>

    </div>
  </main>

  <!-- Footer -->
  <footer class="site-footer">
    <div class="footer-inner">
      <div class="footer-links">
        <a href="https://instagram.com/roksolanas_7" target="_blank" rel="noopener">instagram</a>
        <span class="footer-dot">¬∑</span>
        <a href="https://github.com/rouzeris" target="_blank" rel="noopener">github</a>
        <span class="footer-dot">¬∑</span>
        <a href="https://instagram.com/jumabestia" target="_blank" rel="noopener">yuma</a>
      </div>
      <p class="footer-note">made with ‚ô• and too much matcha</p>
    </div>
  </footer>

  <RPGCat client:load />
</Layout>

<style>
  /* ---- Grid ---- */
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, 160px) repeat(2, 180px) auto auto auto;
    gap: 18px;
    position: relative;
  }

  @media (max-width: 768px) {
    .bento-grid {
      display: flex;
      flex-direction: column;
      gap: 14px;
    }
    .bento-grid > * {
      grid-column: unset !important;
      grid-row: unset !important;
    }
  }

  /* ---- Base card ---- */
  .card {
    border-radius: 16px;
    box-shadow: 0 1px 3px rgba(61, 44, 30, 0.06), 0 4px 16px rgba(61, 44, 30, 0.04);
    transition: transform 0.3s cubic-bezier(.4,0,.2,1), box-shadow 0.3s ease, filter 0.3s ease;
    overflow: hidden;
    position: relative;
  }

  .card:hover {
    transform: translateY(-3px) scale(1.01);
    box-shadow: 0 4px 12px rgba(61, 44, 30, 0.1), 0 12px 32px rgba(61, 44, 30, 0.07);
  }

  /* ---- Card variants ---- */
  .hero-card {
    background: linear-gradient(135deg, #fefcf8 0%, #f5ece0 50%, #f0e4d4 100%);
    border: 1px solid rgba(139, 111, 71, 0.1);
  }
  .hero-card:hover {
    background: linear-gradient(135deg, #fefcf8 0%, #f2e7d8 50%, #eddccc 100%);
  }

  .about-card {
    background: #fefcf8;
    border: 1px dashed rgba(180, 156, 252, 0.4);
  }
  .about-card:hover {
    border-color: rgba(180, 156, 252, 0.7);
    box-shadow: 0 4px 20px rgba(180, 156, 252, 0.12), 0 8px 32px rgba(61, 44, 30, 0.06);
  }

  .anime-card {
    background: linear-gradient(180deg, #fefcf8 0%, #f8f0ff 100%);
  }

  .yuma-card {
    background: #fefcf8;
    background-image: radial-gradient(circle at 20% 80%, rgba(232, 160, 180, 0.08) 0%, transparent 50%),
                       radial-gradient(circle at 80% 20%, rgba(212, 168, 83, 0.08) 0%, transparent 50%);
    border: 1px solid rgba(212, 168, 83, 0.15);
  }
  .yuma-card:hover {
    transform: translateY(-3px) rotate(-0.5deg) scale(1.01);
    border-color: rgba(212, 168, 83, 0.35);
  }

  .jewelry-card {
    background: #fefcf8;
    background-image: 
      radial-gradient(circle at 2px 2px, rgba(139, 111, 71, 0.04) 1px, transparent 1px);
    background-size: 16px 16px;
  }
  .jewelry-card:hover {
    box-shadow: 0 4px 16px rgba(212, 168, 83, 0.12), 0 12px 32px rgba(61, 44, 30, 0.06);
  }

  .spotify-card {
    background: linear-gradient(160deg, #fefcf8 0%, #f0f5ee 100%);
  }

  .games-card {
    background: linear-gradient(135deg, #fefcf8 0%, #f0e8ff 50%, #e8f5f0 100%);
  }
  .games-card:hover {
    box-shadow: 0 4px 20px rgba(126, 200, 80, 0.1), 0 12px 32px rgba(61, 44, 30, 0.06);
  }

  .blog-card {
    background: #fefcf8;
  }

  .insta-card {
    background: linear-gradient(135deg, #fefcf8 0%, #fff0f4 50%, #fef0e8 100%);
  }
  .insta-card:hover {
    box-shadow: 0 4px 20px rgba(232, 160, 180, 0.1), 0 12px 32px rgba(61, 44, 30, 0.06);
  }

  /* ---- Title variants ---- */
  .card-title {
    font-size: 1.1rem;
    font-weight: 500;
    color: #3d2c1e;
    margin: 0 0 16px 0;
    letter-spacing: 0.02em;
  }

  .title-handwritten {
    font-family: 'Kyiv Type', 'Crimson Pro', serif;
    font-size: 1.4rem;
    font-weight: 700;
    font-style: italic;
    letter-spacing: -0.01em;
  }

  .title-playful {
    font-size: 1.05rem;
    font-weight: 600;
    letter-spacing: 0.04em;
  }

  .title-elegant {
    font-family: 'Kyiv Type', 'Crimson Pro', serif;
    font-size: 1.25rem;
    font-weight: 400;
    letter-spacing: 0.06em;
    text-transform: uppercase;
  }

  /* ---- Hero ---- */
  .hero-title {
    font-family: 'Kyiv Type', 'Crimson Pro', serif;
    font-size: clamp(2.8rem, 6vw, 4.5rem);
    font-weight: 300;
    color: #3d2c1e;
    margin: 0;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: 1.15rem;
    color: #8B6F47;
    margin-top: 12px;
    font-weight: 400;
    letter-spacing: 0.08em;
  }

  .hero-doodle {
    margin-top: 20px;
    font-size: 0.85rem;
    color: #c4b09a;
    letter-spacing: 0.3em;
  }

  /* ---- About ---- */
  .about-avatar {
    width: 72px;
    height: 72px;
    border-radius: 50%;
    background: linear-gradient(135deg, #f5ece0, #ffe8ee);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    margin: 0 auto 16px;
  }

  .about-text {
    font-size: 0.9rem;
    color: #5a4a3e;
    line-height: 1.65;
    margin: 0;
  }

  .about-tags {
    display: flex;
    gap: 8px;
    margin-top: 16px;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    padding: 4px 10px;
    border-radius: 20px;
    font-weight: 500;
  }
  .tag-rose { background: rgba(232, 160, 180, 0.2); color: #a0607a; }
  .tag-lavender { background: rgba(180, 156, 252, 0.2); color: #6a56b0; }
  .tag-sage { background: rgba(109, 158, 122, 0.2); color: #4a7a58; }

  /* ---- Yuma ---- */
  .yuma-photo {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: rgba(212, 168, 83, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 8px auto;
    border: 2px dashed rgba(212, 168, 83, 0.25);
  }

  /* ---- Song rows ---- */
  .song-row {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 6px 8px;
    border-radius: 8px;
    transition: background 0.15s ease;
  }
  .song-row:hover {
    background: rgba(109, 158, 122, 0.08);
  }

  /* ---- Existing items ---- */
  .jewelry-item {
    cursor: pointer;
    transition: transform 0.2s ease, filter 0.2s ease;
  }
  .jewelry-item:hover {
    transform: scale(1.06);
    filter: brightness(1.05);
  }

  .blog-item {
    cursor: pointer;
    transition: transform 0.2s ease;
  }
  .blog-item:hover {
    transform: translateY(-3px);
  }

  .insta-link {
    display: block;
    padding: 12px 16px;
    background: rgba(250, 243, 232, 0.6);
    border-radius: 10px;
    color: #3d2c1e;
    text-decoration: none;
    font-size: 0.95rem;
    transition: background 0.15s ease, transform 0.15s ease;
  }
  .insta-link:hover {
    background: #f0e6d6;
    transform: translateX(4px);
  }

  /* ---- Scrollbar ---- */
  .card ::-webkit-scrollbar { height: 4px; width: 4px; }
  .card ::-webkit-scrollbar-track { background: transparent; }
  .card ::-webkit-scrollbar-thumb { background: rgba(139, 111, 71, 0.2); border-radius: 2px; }

  /* ---- Decorative elements ---- */
  .deco {
    position: fixed;
    pointer-events: none;
    z-index: 0;
    opacity: 0.25;
  }

  .deco-star::before {
    content: '‚ú¶';
    font-size: 1.2rem;
    color: #d4a853;
    animation: twinkle 3s ease-in-out infinite;
  }

  .deco-dot::before {
    content: '‚óè';
    font-size: 0.5rem;
    color: #b49cfc;
    animation: twinkle 4s ease-in-out infinite 1s;
  }

  .deco-sparkle::before {
    content: '‚úß';
    font-size: 0.9rem;
    color: #e8a0b4;
    animation: twinkle 3.5s ease-in-out infinite 0.5s;
  }

  @keyframes twinkle {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 0.8; }
  }

  /* ---- Footer ---- */
  .site-footer {
    padding: 40px 20px 100px;
    text-align: center;
  }

  .footer-inner {
    max-width: 1200px;
    margin: 0 auto;
    border-top: 1px solid rgba(139, 111, 71, 0.12);
    padding-top: 28px;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    gap: 8px;
    align-items: center;
    flex-wrap: wrap;
  }

  .footer-links a {
    color: #8B6F47;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.15s ease;
  }
  .footer-links a:hover {
    color: #b49cfc;
  }

  .footer-dot {
    color: #c4b09a;
    font-size: 0.8rem;
  }

  .footer-note {
    font-size: 0.8rem;
    color: #b8a898;
    margin-top: 12px;
    font-style: italic;
  }
</style>
