---
import Layout from '../layouts/Layout.astro'
import YumaCat from '../components/YumaCat'
---

<Layout>
  <YumaCat client:load />

  <!-- ===== Background atmosphere ===== -->
  <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
    <!-- Large gradient orbs -->
    <div class="absolute -top-48 -left-48 w-[600px] h-[600px] rounded-full bg-accent-lavender/[0.04] blur-[120px] anim-drift"></div>
    <div class="absolute top-1/3 -right-64 w-[500px] h-[500px] rounded-full bg-accent-rose/[0.04] blur-[100px] anim-drift" style="animation-delay: -4s;"></div>
    <div class="absolute bottom-0 left-1/3 w-[700px] h-[400px] rounded-full bg-accent-gold/[0.03] blur-[140px] anim-drift" style="animation-delay: -8s;"></div>
    <!-- Subtle grid lines -->
    <div class="absolute inset-0 opacity-[0.025]" style="background-image: linear-gradient(var(--color-accent-lavender) 1px, transparent 1px), linear-gradient(90deg, var(--color-accent-lavender) 1px, transparent 1px); background-size: 120px 120px;"></div>
  </div>

  <main class="relative z-10">

    <!-- ===== HERO ===== -->
    <section class="min-h-screen flex items-center px-6 md:px-16 lg:px-24">
      <div class="w-full max-w-7xl mx-auto grid grid-cols-12 gap-4 items-center">
        <!-- Left: Name stacked large -->
        <div class="col-span-12 lg:col-span-8">
          <p class="font-hand text-accent-gold text-xl md:text-2xl mb-3 anim-reveal d-1 opacity-0">
            hello, i'm
          </p>
          <h1 class="font-display text-[clamp(3.5rem,12vw,11rem)] leading-[0.88] font-bold tracking-tight anim-reveal d-2 opacity-0">
            <span class="block text-accent-lavender">Rou</span>
            <span class="block -mt-2 md:-mt-4">zeris</span>
          </h1>
          <div class="mt-8 md:mt-12 flex flex-wrap gap-3 anim-reveal d-4 opacity-0">
            <span class="px-4 py-1.5 rounded-full text-sm border border-accent-lavender/20 text-accent-lavender bg-accent-lavender/[0.06]">artist</span>
            <span class="px-4 py-1.5 rounded-full text-sm border border-accent-rose/20 text-accent-rose bg-accent-rose/[0.06]">jewelry maker</span>
            <span class="px-4 py-1.5 rounded-full text-sm border border-accent-gold/20 text-accent-gold bg-accent-gold/[0.06]">AI app developer</span>
            <span class="px-4 py-1.5 rounded-full text-sm border border-accent-sage/20 text-accent-sage bg-accent-sage/[0.06]">21 y/o</span>
          </div>
        </div>
        <!-- Right: decorative element -->
        <div class="col-span-12 lg:col-span-4 hidden lg:flex flex-col items-end gap-6 anim-reveal d-5 opacity-0">
          <div class="text-right">
            <p class="font-hand text-2xl text-accent-rose/70 anim-float">‚Üì scroll & explore</p>
          </div>
          <!-- Abstract decorative rings -->
          <div class="relative w-48 h-48 anim-float" style="animation-delay: -2s;">
            <div class="absolute inset-0 rounded-full border border-accent-lavender/15"></div>
            <div class="absolute inset-4 rounded-full border border-accent-rose/10"></div>
            <div class="absolute inset-8 rounded-full border border-accent-gold/15"></div>
            <div class="absolute inset-12 rounded-full bg-accent-lavender/[0.04]"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Divider -->
    <div class="divider-glow mx-6 md:mx-16 lg:mx-24"></div>

    <!-- ===== ABOUT ===== -->
    <section id="about" class="px-6 md:px-16 lg:px-24 py-24 md:py-36">
      <div class="max-w-7xl mx-auto grid grid-cols-12 gap-8 md:gap-12">
        <!-- Offset heading -->
        <div class="col-span-12 md:col-span-4 scroll-reveal">
          <p class="font-hand text-accent-gold text-lg mb-2">about</p>
          <h2 class="font-display text-4xl md:text-5xl italic text-accent-rose leading-tight">
            A creative<br/>soul
          </h2>
        </div>
        <!-- Body text, offset right -->
        <div class="col-span-12 md:col-span-7 md:col-start-6 scroll-reveal" style="transition-delay: 0.15s;">
          <div class="space-y-5 text-text-muted text-lg leading-relaxed">
            <p>
              I'm <strong class="text-text font-medium">Roksolana</strong> ‚Äî drifting between art, code, and craft.
              I make jewelry by hand, build AI-powered apps, and create digital art that lives
              somewhere between dreams and reality.
            </p>
            <p>
              When I'm not making things, you'll find me with my white Maine Coon,
              <strong class="text-accent-rose font-medium">Yuma</strong>,
              who has claimed this website as her territory.
              She might walk across your screen ‚Äî don't mind her, she owns the place.
            </p>
          </div>
          <!-- Small accent detail -->
          <div class="mt-8 flex items-center gap-3">
            <div class="w-12 h-[1px] bg-accent-gold/40"></div>
            <span class="font-hand text-accent-gold/60 text-sm">based in creativity ‚ú¶</span>
          </div>
        </div>
      </div>
    </section>

    <!-- ===== LINKS / FIND ME ===== -->
    <section class="px-6 md:px-16 lg:px-24 py-24 md:py-36">
      <div class="max-w-7xl mx-auto">
        <div class="mb-16 scroll-reveal">
          <p class="font-hand text-accent-gold text-lg mb-2">connect</p>
          <h2 class="font-display text-4xl md:text-6xl text-accent-lavender">Find me</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-3xl">
          <!-- Instagram card -->
          <a
            href="https://www.instagram.com/roksolanas_7"
            target="_blank"
            rel="noopener noreferrer"
            class="group scroll-reveal"
            style="transition-delay: 0.1s;"
          >
            <div class="bg-bg-card/50 backdrop-blur-sm rounded-2xl p-8 border border-white/[0.04] card-hover relative overflow-hidden">
              <div class="absolute top-0 right-0 w-32 h-32 bg-accent-lavender/[0.04] rounded-full blur-2xl -translate-y-1/2 translate-x-1/2 group-hover:bg-accent-lavender/[0.08] transition-colors duration-500"></div>
              <p class="text-3xl mb-4">üì∏</p>
              <p class="font-display text-xl text-text group-hover:text-accent-lavender transition-colors duration-300">@roksolanas_7</p>
              <p class="text-text-muted text-sm mt-1">Art, jewelry & life</p>
              <span class="inline-block mt-4 text-accent-lavender/60 group-hover:text-accent-lavender group-hover:translate-x-2 transition-all duration-300 text-sm">visit ‚Üí</span>
            </div>
          </a>
          <!-- Yuma's card -->
          <a
            href="https://www.instagram.com/jumabestia"
            target="_blank"
            rel="noopener noreferrer"
            class="group scroll-reveal"
            style="transition-delay: 0.2s;"
          >
            <div class="bg-bg-card/50 backdrop-blur-sm rounded-2xl p-8 border border-white/[0.04] card-hover relative overflow-hidden">
              <div class="absolute top-0 right-0 w-32 h-32 bg-accent-rose/[0.04] rounded-full blur-2xl -translate-y-1/2 translate-x-1/2 group-hover:bg-accent-rose/[0.08] transition-colors duration-500"></div>
              <p class="text-3xl mb-4">üê±</p>
              <p class="font-display text-xl text-text group-hover:text-accent-rose transition-colors duration-300">@jumabestia</p>
              <p class="text-text-muted text-sm mt-1">Yuma ‚Äî the real star</p>
              <span class="inline-block mt-4 text-accent-rose/60 group-hover:text-accent-rose group-hover:translate-x-2 transition-all duration-300 text-sm">visit ‚Üí</span>
            </div>
          </a>
        </div>
      </div>
    </section>

    <!-- ===== MARQUEE STRIP ===== -->
    <div class="py-8 overflow-hidden border-y border-white/[0.04] scroll-reveal">
      <div class="flex whitespace-nowrap" style="animation: marquee 20s linear infinite;">
        {Array.from({ length: 2 }).map(() => (
          <span class="mx-8 text-text-muted/30 font-display text-lg tracking-widest uppercase">
            art ‚ú¶ jewelry ‚ú¶ code ‚ú¶ yuma ‚ú¶ dreams ‚ú¶ craft ‚ú¶ AI ‚ú¶ beauty ‚ú¶&nbsp;
          </span>
        ))}
      </div>
    </div>

    <!-- ===== FOOTER ===== -->
    <footer class="px-6 md:px-16 lg:px-24 py-20">
      <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="font-hand text-accent-gold/40 text-lg">rouzeris.me</p>
        <p class="text-text-muted/30 text-sm">made with ‚ô° and a cat on the keyboard</p>
      </div>
    </footer>

  </main>
</Layout>
