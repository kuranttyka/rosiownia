---
import Layout from '../layouts/Layout.astro'
import RPGCat from '../components/RPGCat'
---
<Layout title="Bento C">
  <main style="padding: 24px;">
    <div class="bento">
      <!-- Row 1: Hero tall left + stacked Instagram/Listening right -->
      <div class="card hero" style="grid-column: 1 / 3; grid-row: 1 / 4;">
        <div style="padding: 56px 48px; display: flex; flex-direction: column; justify-content: end; height: 100%;">
          <h1 style="font-size: clamp(3rem, 7vw, 5.5rem); font-weight: 300; color: #3d2c1e; margin: 0; line-height: 1.05; letter-spacing: -0.03em;">Rouzeris</h1>
          <p style="font-size: 1.2rem; color: #8B6F47; margin-top: 14px; letter-spacing: 0.08em;">artist Â· jewelry maker Â· developer</p>
        </div>
      </div>
      <div class="card" style="grid-column: 3; grid-row: 1 / 3;">
        <div style="padding: 20px; display: flex; flex-direction: column; justify-content: center; height: 100%;">
          <h2 class="title">ğŸ“¸ Instagram</h2>
          <div style="display: flex; flex-direction: column; gap: 10px;">
            <a href="https://instagram.com/roksolanas_7" target="_blank" rel="noopener" class="ilink">ğŸ“· @roksolanas_7<span class="sub">personal</span></a>
            <a href="https://instagram.com/jumabestia" target="_blank" rel="noopener" class="ilink">ğŸ± @jumabestia<span class="sub">Yuma</span></a>
          </div>
        </div>
      </div>
      <div class="card" style="grid-column: 4; grid-row: 1;">
        <div style="padding: 20px;">
          <h2 class="title">ğŸµ</h2>
          <div style="display: flex; flex-direction: column; gap: 6px;">
            {[
              { track: 'Stefania', color: '#e8c4a4' },
              { track: 'Ğ©ĞµĞ´Ñ€Ğ¸Ğº', color: '#a4c4e8' },
              { track: 'Glimpse of Us', color: '#c4a4c8' },
            ].map((s) => (
              <div style="display: flex; gap: 8px; align-items: center;">
                <div style={`width: 28px; height: 28px; flex-shrink: 0; border-radius: 5px; background: ${s.color};`}></div>
                <span style="font-size: 0.78rem; color: #3d2c1e;">{s.track}</span>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Cat accent -->
      <div class="card" style="grid-column: 4; grid-row: 2; background: linear-gradient(135deg, #e8d4c4, #d8c4e8); display: flex; align-items: center; justify-content: center;">
        <span style="font-size: 3.5rem;">ğŸ±</span>
      </div>

      <!-- Blog slim -->
      <div class="card" style="grid-column: 3 / 5; grid-row: 3;">
        <div style="padding: 20px;">
          <h2 class="title">ğŸ“ Blog</h2>
          <div style="display: flex; gap: 16px;">
            {[
              { title: 'Recycled silver jewelry', color: '#c8c0b8' },
              { title: 'Top anime 2025', color: '#c4c4e8' },
              { title: 'Building with AI', color: '#c4dce8' },
            ].map((p) => (
              <div style="flex: 1;">
                <div style={`height: 50px; border-radius: 8px; background: ${p.color}; margin-bottom: 8px;`}></div>
                <span style="font-size: 0.82rem; color: #3d2c1e;">{p.title}</span>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Row 2: Anime full width -->
      <div class="card" style="grid-column: 1 / 5; grid-row: 4; overflow: hidden;">
        <div style="padding: 24px;">
          <h2 class="title">ğŸ“º Anime Library</h2>
          <div style="display: flex; gap: 14px; overflow-x: auto; padding-bottom: 8px;">
            {[
              { title: 'Spy x Family', color: '#e8c4c4' },
              { title: 'Chainsaw Man', color: '#c4c4e8' },
              { title: 'Jujutsu Kaisen', color: '#c4dce8' },
              { title: 'My Dress-Up Darling', color: '#e8d4c4' },
              { title: 'Bocchi the Rock!', color: '#d4e8c4' },
              { title: 'Frieren', color: '#c4e8d8' },
              { title: 'Violet Evergarden', color: '#d8c4e8' },
              { title: 'Attack on Titan', color: '#e8c4c4' },
            ].map((a) => (
              <div style="flex-shrink: 0; width: 120px;">
                <div style={`width: 120px; height: 170px; border-radius: 8px; background: ${a.color};`}></div>
                <span style="font-size: 0.85rem; color: #3d2c1e; display: block; margin-top: 6px;">{a.title}</span>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Jewelry full width -->
      <div class="card" style="grid-column: 1 / 5; grid-row: 5;">
        <div style="padding: 24px;">
          <h2 class="title">ğŸ’ Jewelry</h2>
          <div style="display: grid; grid-template-columns: repeat(6, 1fr); gap: 14px;">
            {[
              { name: 'silver ring', color: '#c8c0b8' },
              { name: 'pearl necklace', color: '#e8e0d4' },
              { name: 'amber earrings', color: '#d4a864' },
              { name: 'beaded bracelet', color: '#b8968c' },
              { name: 'wire pendant', color: '#a0a0a0' },
              { name: 'crystal brooch', color: '#c4d4e0' },
            ].map((i) => (
              <div>
                <div style={`aspect-ratio: 1; border-radius: 10px; background: ${i.color}; margin-bottom: 6px;`}></div>
                <span style="font-size: 0.82rem; color: #6b5a4e; text-align: center; display: block;">{i.name}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </main>
  <RPGCat client:load />
</Layout>

<style>
  .bento {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: 140px 140px 140px auto auto;
    gap: 16px;
  }
  .card { background: #fefcf8; border-radius: 14px; box-shadow: 0 1px 3px rgba(61,44,30,0.06), 0 4px 16px rgba(61,44,30,0.04); overflow: hidden; }
  .hero { background: linear-gradient(135deg, #fefcf8 0%, #f5ece0 100%); border: 1px solid rgba(139,111,71,0.08); }
  .title { font-size: 1.05rem; font-weight: 500; color: #3d2c1e; margin: 0 0 12px 0; }
  .ilink { display: block; padding: 10px 14px; background: #faf3e8; border-radius: 10px; color: #3d2c1e; text-decoration: none; font-size: 0.85rem; }
  .sub { font-size: 0.72rem; color: #8B6F47; display: block; margin-top: 2px; }
  @media (max-width: 768px) { .bento { display: flex; flex-direction: column; } }
</style>
