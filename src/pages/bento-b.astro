---
import Layout from '../layouts/Layout.astro'
import RPGCat from '../components/RPGCat'
---
<Layout title="Bento B">
  <main style="padding: 24px;">
    <div class="bento">
      <!-- Hero small left + Anime right big -->
      <div class="card hero" style="grid-column: 1 / 3; grid-row: 1 / 2;">
        <div style="padding: 40px; display: flex; flex-direction: column; justify-content: center; height: 100%;">
          <h1 style="font-size: clamp(2.5rem, 5vw, 4rem); font-weight: 300; color: #3d2c1e; margin: 0; line-height: 1.1;">Rouzeris</h1>
          <p style="font-size: 1.1rem; color: #8B6F47; margin-top: 10px; letter-spacing: 0.08em;">artist Â· jewelry maker Â· developer</p>
        </div>
      </div>
      <div class="card" style="grid-column: 3 / 6; grid-row: 1 / 3; overflow: hidden;">
        <div style="padding: 24px;">
          <h2 class="title">ğŸ“º Anime Library</h2>
          <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 12px;">
            {[
              { title: 'Spy x Family', color: '#e8c4c4' },
              { title: 'Chainsaw Man', color: '#c4c4e8' },
              { title: 'Jujutsu Kaisen', color: '#c4dce8' },
              { title: 'My Dress-Up Darling', color: '#e8d4c4' },
              { title: 'Bocchi the Rock!', color: '#d4e8c4' },
              { title: 'Frieren', color: '#c4e8d8' },
              { title: 'Violet Evergarden', color: '#d8c4e8' },
              { title: 'Attack on Titan', color: '#e8c4c4' },
            ].map((a) => (
              <div>
                <div style={`aspect-ratio: 3/4; border-radius: 8px; background: ${a.color};`}></div>
                <span style="font-size: 0.8rem; color: #3d2c1e; display: block; margin-top: 4px; line-height: 1.2;">{a.title}</span>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Instagram + Games below hero -->
      <div class="card" style="grid-column: 1; grid-row: 2;">
        <div style="padding: 20px; display: flex; flex-direction: column; gap: 10px;">
          <a href="https://instagram.com/roksolanas_7" target="_blank" rel="noopener" class="ilink">ğŸ“· @roksolanas_7</a>
          <a href="https://instagram.com/jumabestia" target="_blank" rel="noopener" class="ilink">ğŸ± @jumabestia</a>
        </div>
      </div>
      <div class="card" style="grid-column: 2; grid-row: 2;">
        <div style="padding: 20px;">
          <h2 class="title">ğŸ®</h2>
          <div style="display: flex; flex-direction: column; gap: 6px;">
            {[
              { title: 'Stardew Valley', color: '#7ec850' },
              { title: 'Hollow Knight', color: '#3a3a5c' },
              { title: 'Animal Crossing', color: '#7ecfc0' },
            ].map((game) => (
              <div style="display: flex; gap: 8px; align-items: center;">
                <div style={`width: 28px; height: 28px; flex-shrink: 0; border-radius: 5px; background: ${game.color};`}></div>
                <span style="font-size: 0.78rem; color: #3d2c1e; font-weight: 500;">{game.title}</span>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Jewelry wide + Listening + Blog -->
      <div class="card" style="grid-column: 1 / 4; grid-row: 3 / 5;">
        <div style="padding: 24px;">
          <h2 class="title">ğŸ’ Jewelry</h2>
          <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 14px;">
            {[
              { name: 'silver ring', color: '#c8c0b8' },
              { name: 'pearl necklace', color: '#e8e0d4' },
              { name: 'amber earrings', color: '#d4a864' },
              { name: 'beaded bracelet', color: '#b8968c' },
              { name: 'wire pendant', color: '#a0a0a0' },
              { name: 'crystal brooch', color: '#c4d4e0' },
            ].map((i) => (
              <div>
                <div style={`aspect-ratio: 1; border-radius: 10px; background: ${i.color}; margin-bottom: 6px;`}></div>
                <span style="font-size: 0.82rem; color: #6b5a4e; text-align: center; display: block;">{i.name}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
      <div class="card" style="grid-column: 4 / 6; grid-row: 3;">
        <div style="padding: 24px;">
          <h2 class="title">ğŸµ Listening</h2>
          <div style="display: flex; flex-direction: column; gap: 10px;">
            {[
              { track: 'Stefania', artist: 'Kalush Orchestra', color: '#e8c4a4' },
              { track: 'Ğ©ĞµĞ´Ñ€Ğ¸Ğº', artist: 'Pentatonix', color: '#a4c4e8' },
              { track: 'Glimpse of Us', artist: 'Joji', color: '#c4a4c8' },
              { track: "Cruel Angel's Thesis", artist: 'Yoko Takahashi', color: '#e8a4a4' },
            ].map((s) => (
              <div style="display: flex; gap: 10px; align-items: center;">
                <div style={`width: 40px; height: 40px; flex-shrink: 0; border-radius: 6px; background: ${s.color};`}></div>
                <div>
                  <div style="font-size: 0.82rem; color: #3d2c1e;">{s.track}</div>
                  <div style="font-size: 0.7rem; color: #8B6F47;">{s.artist}</div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
      <div class="card" style="grid-column: 4 / 6; grid-row: 4;">
        <div style="padding: 24px;">
          <h2 class="title">ğŸ“ Blog</h2>
          <div style="display: flex; flex-direction: column; gap: 8px;">
            {['Recycled silver jewelry', 'Top anime 2025', 'Building apps with AI'].map((t) => (
              <div style="font-size: 0.88rem; color: #3d2c1e; padding: 6px 0; border-bottom: 1px solid rgba(61,44,30,0.06);">{t} â†’</div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </main>
  <RPGCat client:load />
</Layout>

<style>
  .bento {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-template-rows: 200px 160px 220px 180px;
    gap: 16px;
  }
  .card { background: #fefcf8; border-radius: 14px; box-shadow: 0 1px 3px rgba(61,44,30,0.06), 0 4px 16px rgba(61,44,30,0.04); overflow: hidden; }
  .hero { background: linear-gradient(135deg, #fefcf8 0%, #f5ece0 100%); border: 1px solid rgba(139,111,71,0.08); }
  .title { font-size: 1.05rem; font-weight: 500; color: #3d2c1e; margin: 0 0 14px 0; }
  .ilink { display: block; padding: 10px 14px; background: #faf3e8; border-radius: 10px; color: #3d2c1e; text-decoration: none; font-size: 0.85rem; }
  @media (max-width: 768px) { .bento { display: flex; flex-direction: column; } }
</style>
